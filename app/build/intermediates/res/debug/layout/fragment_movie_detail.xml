<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailFragment" >

    <LinearLayout
        android:id="@+id/movie_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/list_item_movie" />
        <!-- The other items, main actors, descitpiotn & pictures -->

		<TextView
            android:id="@+id/movieSynopsis"
            android:layout_margin="12dp"
            android:text="@string/loading_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/movieDetailsCast"
            android:layout_margin="12dp"
            android:text="@string/loading_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

